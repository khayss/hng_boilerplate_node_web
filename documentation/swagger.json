{
    "openapi": "3.0.0",
    "info": {
        "title": "HNG Boilerplate API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://",
            "description": "Production Server"
        }
    ],
    "components": {
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "paths": {
        "/auth/signup": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Create a new account",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User created successfully"
                    },
                    "400": {
                        "description": "Invalid input"
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Sign in to account",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login successful"
                    },
                    "401": {
                        "description": "Invalid credentials"
                    }
                }
            }
        },
        "/auth/social-login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Social authentication login",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "provider": {
                                        "type": "string"
                                    },
                                    "token": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Social login successful"
                    },
                    "401": {
                        "description": "Social login failed"
                    }
                }
            }
        },
        "/auth/magic-link": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Request a magic link for passwordless login",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Magic link sent successfully"
                    },
                    "404": {
                        "description": "Email not found"
                    }
                }
            }
        },
        "/users/{id}/change-password": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Change user password",
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "oldPassword": {
                                        "type": "string"
                                    },
                                    "newPassword": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Password changed successfully"
                    },
                    "400": {
                        "description": "Invalid old password"
                    }
                }
            }
        },
        "/messages/send": {
            "post": {
                "tags": [
                    "Messaging"
                ],
                "summary": "Send an email message",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "to": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "subject": {
                                        "type": "string"
                                    },
                                    "body": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Email sent successfully"
                    },
                    "400": {
                        "description": "Invalid email or input"
                    }
                }
            }
        },
        "/payments/stripe": {
            "post": {
                "tags": [
                    "Payments"
                ],
                "summary": "Process payment via Stripe",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "amount": {
                                        "type": "integer"
                                    },
                                    "currency": {
                                        "type": "string"
                                    },
                                    "source": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Payment processed successfully"
                    },
                    "400": {
                        "description": "Payment processing failed"
                    }
                }
            }
        },
        "/payments/flutterwave": {
            "post": {
                "tags": [
                    "Payments"
                ],
                "summary": "Process payment via Flutterwave",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "amount": {
                                        "type": "integer"
                                    },
                                    "currency": {
                                        "type": "string"
                                    },
                                    "tx_ref": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Payment processed successfully"
                    },
                    "400": {
                        "description": "Payment processing failed"
                    }
                }
            }
        },
        "/users": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Retrieve all users",
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Users retrieved"
                    }
                }
            }
        },
        "/users/{id}": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Get user details",
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User details retrieved"
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        },
        "/admin/users": {
            "get": {
                "tags": [
                    "Superadmin"
                ],
                "summary": "Retrieve all users for admin",
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Admin users retrieved"
                    }
                }
            }
        },
        "/admin/organizations": {
            "get": {
                "tags": [
                    "Superadmin"
                ],
                "summary": "Retrieve all organizations",
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Organizations retrieved"
                    }
                }
            }
        },
        "/settings/profile": {
            "get": {
                "tags": [
                    "Settings"
                ],
                "summary": "Retrieve user profile settings",
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Profile settings retrieved"
                    }
                }
            }
        },
        "/settings": {
            "get": {
                "tags": [
                    "Settings"
                ],
                "summary": "Retrieve application settings",
                "responses": {
                    "200": {
                        "description": "Application settings retrieved"
                    }
                }
            }
        },
        "/landing/privacy-policy": {
            "get": {
                "tags": [
                    "Landing Pages"
                ],
                "summary": "Get privacy policy",
                "responses": {
                    "200": {
                        "description": "Privacy policy retrieved"
                    }
                }
            }
        },
        "/landing/contact-us": {
            "get": {
                "tags": [
                    "Landing Pages"
                ],
                "summary": "Get contact us page",
                "responses": {
                    "200": {
                        "description": "Contact us page retrieved"
                    }
                }
            }
        },
        "/notifications": {
            "get": {
                "tags": [
                    "Notifications"
                ],
                "summary": "Get user notifications",
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Notifications retrieved"
                    }
                }
            }
        },
        "/blog": {
            "get": {
                "tags": [
                    "Blog"
                ],
                "summary": "Get blog posts",
                "responses": {
                    "200": {
                        "description": "Blog posts retrieved"
                    }
                }
            }
        },
        "/invite": {
            "post": {
                "tags": [
                    "Invite"
                ],
                "summary": "Send an invite link to user",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Invite sent successfully"
                    }
                }
            }
        },
        "/language": {
            "get": {
                "tags": [
                    "Settings"
                ],
                "summary": "Retrieve available languages and regions",
                "responses": {
                    "200": {
                        "description": "Languages and regions retrieved"
                    }
                }
            }
        },
        "/admin/email-templates": {
            "get": {
                "tags": [
                    "Superadmin"
                ],
                "summary": "Manage email templates",
                "responses": {
                    "200": {
                        "description": "Email templates retrieved"
                    }
                }
            }
        }
    }
}