{
    "openapi": "3.0.0",
    "info": {
        "title": "HNG Boilerplate API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://",
            "description": "Production Server"
        }
    ],
    "components": {
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "paths": {
        "/users/{id}/profile": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Retrieve user profile information",
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User profile retrieved"
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        },
        "/users/{id}/deactivate": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Deactivate a user account",
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "204": {
                        "description": "User account deactivated"
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        },
        "/users/{id}/reactivate": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Reactivate a deactivated user account",
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "204": {
                        "description": "User account reactivated"
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        },
        "/users/{id}/notifications": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Get user notifications",
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User notifications retrieved"
                    }
                }
            }
        },
        "/users/{id}/settings": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Retrieve user-specific settings",
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User settings retrieved"
                    }
                }
            },
            "put": {
                "tags": [
                    "Users"
                ],
                "summary": "Update user-specific settings",
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "setting_key": {
                                        "type": "string"
                                    },
                                    "setting_value": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Settings updated"
                    },
                    "400": {
                        "description": "Invalid input"
                    }
                }
            }
        }
    }
}